package assistant;

import java.util.Scanner;

/**
 *
 * @author lucja
 */
public class DoTasks {
     //create main method
    public static void main(String[] args){
        //create integer
      PersonalAssistant p = new PersonalAssistant();
     PersonalAssistant r = new PersonalAssistant();
      r.displayAbility();
       p.canIBuyIt();
       // int i is for temperature
        int temp;
        
        //scanner object that will give you user's input
        Scanner userInputScanner = new Scanner(System.in);
        System.out.println("Let's see what the weather gonna look like today");
        System.out.println("***Check humidity***");
        System.out.println("TEMP: ");
        
         temp = userInputScanner.nextInt();
         while(temp>=10){
             //if temp is 10 or greater than 10 
             // humidity level will be 30% or above 
             System.out.println("Humidity level is 30% or above");
             System.out.println("30%-50% is good humidity lever for you");
             break;
         } //close while
         temp--;
    
             if(temp<=0){
                 System.out.println("Humidity level is: 25% or below");
                 System.out.println("Humidity is low.It's not good for you");
                 
             } // close if
             
         } // close main method
    
    
} // close class

